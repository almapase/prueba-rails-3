<%= form_for(@song, html: {class: "form-horizontal"}) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="well">
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duration, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :duration, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :genre_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(
            :genre_id,
            options_for_select(Genre.all.map{|g| [g.name, g.id]}, @song.genre_id),
            {},
            class:"form-control"
        ) %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-default"%>
      </div>
    </div>
  </div>
<% end %>
